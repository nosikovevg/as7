server {
listen 80; 
server_name    truruki.ru;        
root  /var/www/trur; 
index index.php;
      
     location / {
          try_files $uri $uri/ =404;
       }

     location ~* \.php$ {
       include snippets/fastcgi-php.conf;            
       fastcgi_pass unix:/var/run/php/php8.1-fpm-tru.sock;
        }
   	location ~ /\.ht {
               deny all;
       }
}

